NAME = push_swap
CC = cc
CFLAGS = -Wall -Werror -Wextra
SRCS = srcs/main.c srcs/operations.c srcs/sort_large.c srcs/sort_small.c srcs/stack_utils.c srcs/utils.c
OBJS = $(SRCS:.c=.o)
INCLUDES = -I includes

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re